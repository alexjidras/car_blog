<% include partials/header %>

<div class="container">
    
    <div class="jumbotron">
        
        <h1 class="display-3">Cars</h1>
        <p class="lead">A collection of beautiful cars</p>
        
        <a class="btn btn-primary btn-md" href="/cars/new" role="button">Add car</a>
    </div>
    
    <div class="row">
        
        <% for(var i=0; i< cars.length; i++) {%>
            <div class="col-md-3 col-md-4 col-sm-6 ">
            <div class="card show-page" >   
              <div style="border-radius:6px 6px 0px 0px;width: 100%;height:200px;overflow:hidden">
                    <img class="img-fluid" src="<%=cars[i].image%>">
                </div>
              <div class="card-block">
                <h3 class="card-title"><%= cars[i].name %></h3>
                
                <a href="/cars/<%= cars[i]._id %>" class="btn btn-md btn-primary">View car</a>
              </div>
            </div>
        </div>
        <% }; %>
      
    
    
    
    
    </div> 
        
</div>


<% include partials/footer %>